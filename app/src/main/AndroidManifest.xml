<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.GroceryActivity"
            android:label="@string/title_activity_grocery">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="comp3350.recimeal.presentation.GroceryActivity" />
        </activity>
        <activity
            android:name=".presentation.RecipesActivity"
            android:label="@string/title_activity_recipe">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="comp3350.recimeal.presentation.RecipesActivity" />
        </activity>
        <activity
            android:name=".presentation.MainActivity"
            android:exported="true"
            android:label="@string/title_activity_main"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="comp3350.recimeal.presentation.MainActivity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.CreateActivity"
            android:label="CreateActivity"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="comp3350.recimeal.presentation.CreateActivity" />
        </activity>
    </application>

</manifest>